<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@android:color/background_dark"
	android:orientation="vertical">

    <SurfaceView 
		 android:id="@+id/surfaceview" 
		 android:layout_width="match_parent"
		 android:layout_height="match_parent"
		  />

	<ImageView
		android:id="@+id/swipe_camera"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/__picker_camera_swipe_selector"
		android:scaleType="center"
		android:padding="10dp"
		android:layout_alignParentRight="true"
		android:background="?android:attr/selectableItemBackground"
		/>

	<me.iwf.photopicker.widget.RoundProgressBar
		android:id="@+id/recorder_progress_view"
		android:layout_width="102dp"
		android:layout_height="102dp"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="20dp"
		app:roundColor="#ccc"
		app:roundButtonColor="#fff"
		app:roundProgressColor="?attr/colorPrimary"
		app:roundWidth="38dp"
		app:roundButtonWidth="28dp"
		app:roundProgressWidth="5dp"
		/>
    
</RelativeLayout>

